@inherits LayoutComponentBase

@inject MasaBlazor MasaBlazor

<MApp Id="inspire">
    <MAppBar App
              Color="white"
             Flat>
        <MAvatar Color="@(MasaBlazor.Breakpoint.SmAndDown ? "grey darken-1" : "transparent")"
                 Size="32"></MAvatar>

        <MTabs Centered
                Class="ml-n9"
                Color="grey darken-1">
             @foreach (var link in _links)
            {
                <MTab>
                    @link
                </MTab>
            }
        </MTabs>

    </MAppBar>

    <MMain Class="grey lighten-3">
        <MContainer>
            <MRow>
                <MCol Cols="12"
                      Sm="2">
                    <MSheet Rounded="@("lg")"
                            MinHeight="268">
                        <!-- Your content -->
                    </MSheet>
                </MCol>

                <MCol Cols="12"
                      Sm="8">
                    <MSheet MinHeight="@("calc(100vh - 100px)")"
                            Rounded="@("lg")">
                        @Body
                    </MSheet>
                </MCol>

                <MCol Cols="12"
                      Sm="2">
                    <MSheet Rounded="@("lg")"
                            MinHeight="268">
                        <!-- Your content -->
                    </MSheet>
                </MCol>
            </MRow>
        </MContainer>
    </MMain>
</MApp>

@code {
    List<string> _links = new()
    {
        "首页",
        "合集",
        "资源列表",
        "友联",
        "关于"
    };
}